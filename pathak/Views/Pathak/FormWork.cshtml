@model List<pathak.Models.employee>
@{
    ViewBag.Title = "Index";
    int sn = 0;
}
<style>
    .gh {
        background-color: #3090C7;
        width: 40%;
    }
</style>

<h2>Index</h2>

<table border="1" class="gh">
    <tr>
        <th>SN</th>
        <th>id</th>
        <th>Name</th>
        <th>Address</th>
        <th>contact</th>

    </tr>
     @foreach(var data in Model)
     {
    <tr>
        <td>@(++sn)</td>
        <td>@(data.id)</td>
        <td>@(data.name)</td>
        <td>@(data.address)</td>
        <td>@(data.contact)</td>
    </tr>
     }
</table><br>
<button class="btn btn-primary"><a href="@Url.Action("Create")" style="color:white;">Add Record</a></button>